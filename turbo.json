{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"env": ["PROD", "CONVEX_DEPLOY_KEY", "NEXT_PUBLIC_CONVEX_URL", "NEXT_PUBLIC_POSTHOG_KEY", "NEXT_PUBLIC_POSTHOG_HOST"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check": {
			"dependsOn": ["^check"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"deploy": {
			"cache": false,
			"persistent": true
		},
		"deploy:convex": {
			"cache": false,
			"persistent": true
		}
	}
}
